<html>
  <head>
    <meta charset="UTF-8">
    <title>Carrito de Compras</title>
  </head>
  <body>
    <!-- Barra de Navegación -->
    <header>
      <nav>
        <ul>
          <li><a href="/">Inicio</a></li>
          <li><a href="/productos">Productos</a></li>
          <li><a href="/perfil">Perfil</a></li>
        </ul>
      </nav>
    </header>

    <!-- Contenido Principal -->
    <main>
      <h1>Carrito de Compras</h1>
      <section>
        <ul>
          <!-- Producto 1: Base Pizza -->
          <li>
            <img src="src/imagen/pizza.jpg" width="200" height="150" alt="BASE DE PIZZA" />
            <span>BASE DE PIZZA - Cantidad: 2 - Precio: 2.00€</span>
            <button>Eliminar</button>
          </li>
          <!-- Producto 2: Barra Artesana -->
          <li>
            <img src="src/imagen/barra.jpg" width="200" height="150" alt="BARRA ARTESANA" />
            <span>BARRA ARTESANA - Cantidad: 4 - Precio: 1.00€</span>
            <button>Eliminar</button>
          </li>
          <!-- Producto 3: Espelta -->
          <li>
            <img src="src/imagen/espelta.jpg" width="200" height="150" alt="ESPELTA" />
            <span>ESPELTA - Cantidad: 3 - Precio: 6.50€</span>
            <button>Eliminar</button>
          </li>
          <!-- Producto 4: Pasas y Nueces -->
          <li>
            <img src="src/imagen/pasas-y-nueces.jpg" width="200" height="150" alt="PASAS Y NUECES" />
            <span>PASAS Y NUECES - Cantidad: 2 - Precio: 6.50€</span>
            <button>Eliminar</button>
          </li>
        </ul>
        <p><strong>Total:</strong> 40.50€</p>
        <!-- Enlace para finalizar compra -->
        <a href="/pago">
          <button>Finalizar Compra</button>
        </a>
      </section>
    </main>
  </body>
</html>