<html>
  <head>
    <meta charset="UTF-8">
    <title>ENVIO</title>
  </head>
  <body>
    <!-- Barra de Navegación -->
    <header>
      <nav>
        <a href="/">Inicio</a>
        <a href="/carrito">Carrito</a>
        <a href="/login">Iniciar Sesión</a>
      </nav>
    </header>

    <!-- Contenido Principal -->
    <main>
      <h1>Datos de Envío</h1>
      <form action="#" method="POST">
        <!-- Campo para Nombre de Usuario -->
        <label for="username">Nombre de Usuario:</label>
        <input type="text" id="username" name="username" required>

        <!-- Campo Dirección -->
        <label for="address">Dirección:</label>
        <input type="text" id="address" name="address" required>

        <!-- Campo Código Postal -->
        <label for="zipcode">Código Postal:</label>
        <input type="text" id="zipcode" name="zipcode" required>

        <!-- Botones de Pago -->
        <h2>Método de Pago</h2>
        <button type="submit" formaction="/pago">VISA</button>
        <button type="submit" formaction="/pago">PayPal</button>
        <button type="submit" formaction="/pago">Bizum</button>

        <!-- Botón para Confirmar Compra -->
        <button type="submit" formaction="/confirmacion">Confirmar Compra</button>
      </form>
    </main>
  </body>
</html>
